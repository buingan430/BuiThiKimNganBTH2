@model IEnumerable<BuiThiKimNganBTH2.Models.Person>
@{
    ViewData["Title"] = "Index";
}
<h1>Index</h1>
<p>
    <a asp-action ="Upload"> Upload New</a>
</p>
<table class ="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PersonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adress)
            </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PersonName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Adress)
        </td>
        <td>
            <a asp-action ="Edit" asp-route-id ="@item.PersonName">Edit</a>
            <a asp-action ="Details" asp-route-id ="@item.PersonName">Details</a>
            <a asp-action ="Delete" asp-route-id ="@item.PersonName">Delete</a>
        </td>
    </tr>
}
    </tbody>

</table>