@model BuiThiKimNganBTH2.Models.Person
@{
    ViewData["Title"] = "Delete";
}
<h3>Bạn có muốn xóa thông tin Nhân viên ?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class ="col-sm-2">
            @Html.DisplayNameFor(model => model.PersonName):
        </dt>
        <dd class ="col-sm-10">
            @Html.DisplayFor(model => model.PersonName)
        </dd>
    </dl>
    <dl class="row">
        <dt class ="col-sm-2">
            @Html.DisplayNameFor(model => model.Adress):
        </dt>
        <dd class ="col-sm-10">
            @Html.DisplayFor(model => model.Adress)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PersonName" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a class="btn btn-success" asp-action="Index">Danh sách Customer</a>
    </form>
</div>